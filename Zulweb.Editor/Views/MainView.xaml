<Window x:Class="Zulweb.Editor.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zulweb.Editor"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:infrastructure="clr-namespace:Zulweb.Editor.Infrastructure"
        xmlns:mvvm="clr-namespace:Eos.Mvvm;assembly=Eos.Mvvm"
        xmlns:views="clr-namespace:Zulweb.Editor.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance views:Main}"
        Title="MainWindow" Height="450" Width="800">

    <dxdo:DockLayoutManager ItemsSource="{Binding Path=Pages}">

        <dxdo:MVVMHelper.LayoutAdapter>
            <infrastructure:LayoutAdapter />
        </dxdo:MVVMHelper.LayoutAdapter>

        <dxdo:LayoutGroup Orientation="Horizontal">
            <dxdo:TabbedGroup x:Name="Panel" AllowClose="False" ItemWidth="1*">
                <dxdo:TabbedGroup.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:IPage}">
                        <dxdo:LayoutPanel ContentTemplateSelector="{x:Static mvvm:UiSettings.ViewLocator}"
                                          AllowClose="False" ShowCaption="False" />
                    </DataTemplate>
                </dxdo:TabbedGroup.ItemTemplate>
            </dxdo:TabbedGroup>
            <dxdo:DocumentGroup x:Name="Documents" ItemWidth="3*">
                <dxdo:DocumentGroup.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:IPage}">
                        <dxdo:DocumentPanel IsActive="{Binding Path=IsActive}"
                                            Caption="{Binding Path=Caption}"
                                            Content="{Binding Path=.}"
                                            ContentTemplateSelector="{x:Static mvvm:UiSettings.ViewLocator}" />
                    </DataTemplate>
                </dxdo:DocumentGroup.ItemTemplate>
            </dxdo:DocumentGroup>
        </dxdo:LayoutGroup>

    </dxdo:DockLayoutManager>

</Window>